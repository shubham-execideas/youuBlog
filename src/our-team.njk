---
title: Our Team
layout: 'base.njk'
---

{# Blogs section starts here #}
<section class="w-full px-4 lg:px-16 relative mt-5">

    <p class="text-4xl font-bold mt-12">Our Team</p>
    <div class="flex flex-col flex-wrap justify-around lg:flex-row team-cards-container">
        {% for team in collections.team %}
          
        <div class="team-card flex  flex-col overflow-hidden text-left lg:text-center relative bg-white rounded-2xl m-5 p-5 lg:w-2/5">
            <img src="{{ team.data.image }}" alt="" class="rounded-2xl order-1 h-[500px] w-[600px]">
            <p class="team-member-name text-3xl mt-4 font-bold whitespace-nowrap order-2">{{ team.data.name }}</p>
            <p class="team-member-designation text-2xl mt-1 font-medium whitespace-nowrap order-3">{{ team.data.designation }}</p>
            <div class="flex justify-center mt-5 order-5 lg:order-4">
                <a href="" class="border-2 rounded-full m-3 p-3 cursor-pointer">
                    <img src="/assets/blog/linkdn.svg" alt="" style="height: 23px; width: 23px">
                </a>
                <a href="" class="border-2 rounded-full m-3 p-3 cursor-pointer">
                    <img src="/assets/blog/facebook.svg" alt="" style="height: 23px; width: 23px">
                </a>
                <a href="" class="border-2 rounded-full m-3 p-3 cursor-pointer">
                    <img src="/assets/blog/twitter.svg" alt="" style="height: 23px; width: 23px">
                </a>
            </div>
            <div class="team-member-description order-4 lg:order-5  lg:bg-gradient-to-r lg:from-bgpurple lg:via-bgpink lg:to-bgyellow block lg:absolute mt-5 w-fit">
                <p class="team-member-name hidden lg:block lg:text-white text-4xl mt-4 font-bold whitespace-nowrap">{{ team.data.name }}</p>
                <p class="team-member-designation hidden lg:inline-block  mb-3  lg:text-white text-3xl mt-2 font-semibold whitespace-nowrap">{{ team.data.designation }}</p>
                <p class="lg:text-white text-2xl">
                {{ team.data.description }}
            </p>
            </div>
            
            
        </div>
        {%- endfor %}
    </div>


</section>
{# Blogs section ends here #}