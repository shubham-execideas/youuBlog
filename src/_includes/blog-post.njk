---
title: post
layout: 'base.njk'
---

<article class="main-article bg-[url('/assets/blog_bg_image.svg')] bg-no-repeat bg-right-top bg-45 bg-50">
  <div class="flow md:px-8 px-4 lg:px-20">
    <div class="md:block lg:flex mt-10 justify-between items-center">
      <div>
        <div class="flex">
          <p>Published Date:</p>
          <p>{{ date | postDate }}</p>
        </div>
        <div class="flex  my-3 whitespace-nowrap">
          {% for tag in postTags %}
            <p class="bg-pink-50 uppercase p-1 mr-2 text-xs">
              {{ tag }}
            </p>
          {%- endfor %}
        </div>
      </div>
      {% include 'social-media.njk' %}
    </div>
    <h1 class="article-title text-[2rem] font-bold mb-3">
      {{ title }}
    </h1>
    <p class="mb-8 text-lg">{{ description }}</p>
    <div class="lg:flex">
      <div
        class="sm:w-full md:w-full lg:w-4/6">
        {# <div class="">{{videoURL}}</div> #}
        {%- if videoURL.length %}
          <div class="bg-white rounded-xl p-6">
            {%- if videoURL.includes("youtube") -%}
              <iframe src="{{ videoURL }}" id="iframe" class="w-full rounded-lg h-[300px] lg:h-[500px]" frameborder="0" allowfullscreen></iframe>
            {%- else -%}
              <video playsinline controls class="w-full rounded-lg h-[300px] lg:h-[500px]" name="media">
                <source src="{{ videoURL }}" type="video/mp4"></video>
              {%- endif -%}
            </div>
          {%- endif -%}
          <div class="blog-body text-lg">
            {{ content | safe }}
          </div>
        </div>
        <div class="h-fit sm:w-full md:w-full lg:w-2/6">
          <div class="hidden sm:hidden md:hidden lg:inline-block">
            <h1 class="font-semibold text-2xl ml-5">Other Blogs</h1>
            {%- for post in collections.post | reverse -%}
              {%- if loop.index <= 4 %}
                <a href="{{ post.url }}" class="m-5 flex p-3 rounded-lg bg-white">
                  <img src="{{ post.data.image }}" alt="{{ post.index }}" style="height: 90px; width:90px; margin-top: 10px;" class="object-cover rounded-lg">
                    <div class=" ml-3">
                      <p class="text-lg font-semibold blog-title-cut">{{ post.data.title }}</p>
                      <div class="flex my-2 flex-wrap whitespace-nowrap ">
                        {% for tag in  post.data.postTags %}
                          <p class="bg-pink-50 uppercase p-1 mr-2 mt-1" style="font-size: 10px;">
                            {{ tag }}
                          </p>
                        {%- endfor %}
                      </div>
                      {# <p class="text-xs">Published Date: {{ post.data.date | postDate }}</p> #}
                    </div>
                  </a>
                {%- endif -%}
              {%- endfor -%}
            </div>
            <section class="w-full mt-10 relative sm:inline-block md:inline-block lg:hidden">
              <div class="flex justify-between items-center flex-wrap mb-8">
                <div>
                  <h3 class="text-4xl font-bold mb-3">Other Blogs</h3>
                  {# <span class="text-sm">Catchup on the good stuff</span> #}
                </div>
                <div class="flex lg:justify-end justify-between m-[15px]">
                  <div class="order-2 lg:order-none blog-pagination flex md:justify-center lg:justify-end md:top-[16px] top-[7px] lg:top-[13px]
                    lg:mr-5 relative"></div>
                  <div class="order-1 lg:order-none blog-prev-button w-14 lg:mr-[11px]">
                    <img src="/assets/prev.svg" alt="" class="h-6 md:h-fit lg:h-fit"/>
                  </div>
                  <div class="order-3 lg:order-none blog-next-button w-14">
                    <img src="/assets/next.svg" alt="" class="h-6 md:h-fit lg:h-fit"/>
                  </div>
                </div>
              </div>
              <div class="swiper blog-Swiper">
                <div class="swiper-wrapper w-96 content">
                  {%- for post in collections.post | reverse -%}
                    {# {% include 'article-snippts.njk' %} #}
                    <div class="swiper-slide card rounded-lg">
                      <div class="card-content w-full flex flex-col items-start">
                        <a href="{{ post.url }}" class="flex p-3 rounded-lg w-full bg-white">
                          <img src="{{ post.data.image }}" alt="" class="object-cover h-[50px] w-[50px] md:h-[80px] md:w-[80px] rounded-lg">
                            <div class=" ml-3">
                              <p class="text-base lg:text-[1.2rem] font-semibold blog-title-cut">{{ post.data.title }}</p>
                              <div class="flex my-2 flex-wrap whitespace-nowrap ">
                                {% for tag in  post.data.postTags %}
                                  <p class="bg-pink-50 uppercase p-1 mr-2 mt-1" style="font-size: 10px;">
                                    {{ tag }}
                                  </p>
                                {%- endfor %}
                              </div>
                              <p class="text-xs">Published Date: {{ post.data.date | postDate }}</p>
                            </div>
                          </a>
                        </div>
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              </section>
              {% include 'schedule.njk' %}
            </div>
          </div>
        </article>
        <script type="module">
          import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.esm.browser.min.js'
          var swiper = new Swiper(".blog-Swiper", {
            slidesPerView: 1.1,
            spaceBetween: 5,
            // slideClass: ".slider",
            slidesPerGroup: 1,
            loop: false,
            loopFillGroupWithBlank: true,
            pagination: {
              el: ".blog-pagination",
              clickable: true
            },
            navigation: {
              nextEl: ".blog-next-button",
              prevEl: ".blog-prev-button"
            },
            breakpoints: {
              // when window width is >= 320px
              0: {
                slidesPerView: 1.1,
                slidesPerGroup: 1,
                // spaceBetween: 5,
              },
              // when window width is >= 480px
              520: {
                slidesPerView: 2.2,
                slidesPerGroup: 2,
                // spaceBetween: 10,
              },
              // when window width is >= 640px
              1025: {
                slidesPerView: 3.5,
                slidesPerGroup: 3,
                // spaceBetween: 20,
              }
            }
          });
        </script>