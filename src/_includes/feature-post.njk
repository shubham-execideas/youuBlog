---
title: post
layout: 'base.njk'
---

<article class="main-article bg-[url('/assets/blog_bg_image.svg')] bg-no-repeat bg-right-top bg-45 bg-50">
  <div class="flow px-20">
    <div class="flex justify-between items-center">
      <div>
        <div class="flex mt-10">
          <p>Published Date:</p>
          <p>{{ date | postDate }}</p>
        </div>
        <div class="flex  my-3 whitespace-nowrap">
          {% for tag in postTags %}
            <p class="bg-pink-50 uppercase p-1 mr-2 text-xs">
              {{ tag }}
            </p>
          {%- endfor %}
        </div>
      </div>
      <div class="social-links flex items-center w-330 justify-between">
        <p class="uppercase">share</p>
        <div class="social-icons bg-white rounded-full  h-10 w-10 flex justify-center items-center">
          <img src="/assets/blog/linkdn.svg" alt="" class="h-5 w-5"></div>
          <div class="social-icons bg-white rounded-full h-10 w-10 flex justify-center items-center">
            <img src="/assets/blog/facebook.svg" alt="" class="h-5 w-5"></div>
            <div class="social-icons bg-white rounded-full h-10 w-10 flex justify-center items-center">
              <img src="/assets/blog/insta.svg" alt="" class="h-5 w-5"></div>
              <div class="social-icons bg-white rounded-full h-10 w-10 flex justify-center items-center">
                <img src="/assets/blog/twitter.svg" alt="" class="h-5 w-5"></div>
                <div class="social-icons bg-white rounded-full h-10 w-10 flex justify-center items-center">
                  <img src="/assets/blog/link.svg" alt="" class="h-5 w-5"></div>
                </div>
              </div>
              <h1 class="article-title text-2xl font-bold">
                {{ title }}
              </h1>
              <p class="mb-8">{{ description }}</p>
              <div class="lg:flex">
                <div
                  class="sm:w-full md:w-full lg:w-4/6">
                  {# <div class="">{{videoURL}}</div> #}
                  {%- if videoURL.length %}
                    <div class="bg-white rounded-xl p-6">
                      <iframe height="500" src="{{ videoURL }}" frameborder="0" allowfullscreen="" class="w-full rounded-lg"></iframe>
                    </div>
                  {%- endif -%}
                  <div class="flex flex-wrap blog-body">
                    {{ content | safe }}
                  </div>
                </div>
                <div class="h-fit sm:w-full md:w-full lg:w-2/6">
                  <h1 class="font-semibold text-2xl ml-5">Other Blogs</h1>
                  {%- for post in collections.post | reverse -%}
                    <a href="{{ post.url }}" class="m-5 flex items-center p-3 rounded-lg bg-white">
                      <img src="{{ post.data.image }}" alt="" style="height: 120px; width:120px;" class="object-cover rounded-lg">
                        <div class=" ml-3">
                          <p class="text-xl font-semibold blog-title-cut">{{ post.data.title }}</p>
                          <div class="flex my-2 flex-wrap whitespace-nowrap ">
                            {% for tag in  post.data.postTags %}
                              <p class="bg-pink-50 uppercase p-1 mr-2 mt-1" style="font-size: 10px;">
                                {{ tag }}
                              </p>
                            {%- endfor %}
                          </div>
                          <p class="text-xs">Published Date: {{ post.data.date | postDate }}</p>
                        </div>
                      </a>
                    {%- endfor -%}
                    <div class="schedule-calendar bg-white rounded-xl text-center p-5 m-5">
                      <p class="text-3xl font-semibold">Meet Us for Any Queries</p>
                      <p class="mt-3">Select a time you like to meet with us</p>
                      <img src="/assets/blog/blog_schedule_calendar.svg" alt="calendar" class="-top-14 relative">
                        <p class="mb-14">
                          <a href="" class="text-white bg-sumireVoilet p-3 my-10 rounded-md">Schedule Now</a>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </article>