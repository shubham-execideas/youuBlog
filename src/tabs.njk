{# Tabs section starts here #}
<div class="px-16 py-5 h-auto mb-10 hidden lg:inline-block">
  <div class="tabs grid grid-cols-5 h-auto relative">
    <div class="relative">
      <div class="tab-header relative pr-2 h-fit  border-r-4 ml-1.2">
        {%- for slider in collections.slider -%}
          {% include 'sliderTitle.njk' %}
        {%- endfor -%}
      </div>
      {%- for contact in collections.contact -%}
        {% include 'contact.njk' %}
      {%- endfor -%}
    </div>
    <div class="tab-indicator"></div>
    <!-- col-span-2 relative h-full overflow-hidden -->
    <div class="tab-content col-span-4 h-auto">
      {%- for slider in collections.slider -%}
        {% include 'slider.njk' %}
      {%- endfor -%}
      {{ content | safe }}
    </div>
  </div>
</div>
<div class=" relative  sm:inline-block md:inline-block lg:hidden overflow-hidden" style="width: 100%">
  <select
    name=""
    id="tabTitle"
    onchange="redirect(this.value)"
    style="width: 92%"
    class="mb-8 mt-5 mx-4 border-2 p-2.5 rounded-md text-gray-500 font-semibold outline-0 ">
    <option value="/" selected>
       Select Menu
      </option>
    {%- for slider in collections.slider -%}
      <option value="{{ slider.url }}">
        <a href="{{ slider.url }}">{{ slider.data.slideButtonText }}</a>
      </option>
    {%- endfor -%}
  </select>
  <div id="tabContent" class="tabContent" style="min-height: 500px">
    {%- for slider in collections.slider -%}
      {# {% include 'feature.njk' %} #}
      <div class="absolute mx-4" id="{{ slider.data.slideButtonText }}">
        <p class="mb-5 ">{{ slider.data.slideShortTitle }}</p>
        <h2 class="font-bold text-3xl lg:text-4xl mb-5">
          {{ slider.data.slideTitle }}
        </h2>
        <p class="mb-5 text-lg">
          {{ slider.data.sliderDescription }}
        </p>
        <p class="font-semibold text-xl mb-2">Here’s why more and more healthcare innovators want in:</p>
        <span class="mb-5 flex items-start text-lg">
          <img src="./assets/pointer.svg" class="mr-3 mt-1" alt="">
            <p>	Our super smart YOUUtility <sup>TM </sup> Augmented Intelligence, value-based interconnected care workflows and mobile devices makes providing care easier with less hassle.</p>
          </span>
          <span class="mb-3 flex items-start text-lg">
            <img src="./assets/pointer.svg" class="mr-3 mt-1" alt=""/>
            <p>
             	It gets you closer to the customer and transforms your traditional business model into digital value-based care communities. Keep your existing systems, or your EHR, or use ours – it’s really good!
            </p>
          </span>
          <span class="mb-3 flex items-start text-lg">
            <img src="./assets/pointer.svg" class="mr-3 mt-1" alt=""/>
            <p>
              	It's no longer about simply providing care; it's about adding value, removing risk and engaging the customer – for life.
            </p>
          </span>
          <p class="footer mt-8 mb-5 top-full">
            <a href="{{ slider.url }}" class="bg-sumireVoilet px-4 py-2 text-sm rounded-md font-semibold text-white">
              Find Out How
            </a>
            {# <a href="{{ slider.url }}" class="text-sumireVoilet ml-7 font-bold text-sm">
              READ THE CASE STUDY
              <img src="/assets/read_study_case.svg" alt="" style="display:inline-block; margin-bottom:3px;margin-left:2px"></a> #}
            </p>
            <span class=" rounded-md shadow-md inline-block mt-6 w-full">
              <!-- <img src="./assets/tab_photo.svg" alt="" class="h-72 w-80" /> -->
              {# <iframe src="{{ slider.data.videoURL }}" class="bg-purple-200  h-72" frameborder="0" allowfullscreen style="width: 100%"></iframe> #}
                {%- if slider.data.videoURL.includes("youtube") -%}<iframe src="{{ slider.data.videoURL }}" id="iframe" class="bg-purple-200  h-72" style="width: 100%" frameborder="0" allowfullscreen> </iframe>
              {%- else -%}
                <video playsinline controls   class="bg-purple-200 h-72" style="width: 100%" name="media">
                  <source src="{{ slider.data.videoURL }}#t=0.001" type="video/mp4"></video>
                {%- endif -%}
                <img src="./assets/tab_footer_photo.svg" alt="" class="w-64 m-auto"/>
              </span>
            </div>
          {%- endfor -%}
        </div>
      </div>


      <script>
        function redirect(value){
        console.log(value)
        window.location = value;
        }

      </script>
      {# Tabs section ends here #}